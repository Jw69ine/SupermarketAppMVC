<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Order History</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <%- include('partials/navbar', { user: user }) %>
    <style>
        body { background: #f4f6fb; }
        .history-wrap {
            max-width: 1050px;
            margin: 48px auto 30px auto;
        }
        .order-card {
            background: #fff;
            border-radius: 20px;
            box-shadow: 0 8px 24px rgba(35, 95, 164, 0.13);
            padding: 2.3rem 2.1rem 2.1rem 2.1rem;
        }
        .page-title {
            letter-spacing: -1.5px;
        }
        thead.table-header th {
            background: #235fa4;
            color: #fff;
            border-color: #235fa4;
        }
        .table th, .table td { vertical-align: middle; }
        .order-row {
            transition: box-shadow .18s ease, background .18s ease;
        }
        .order-row:hover {
            box-shadow: 0 4px 16px rgba(18,50,110,0.10);
            background: #f7fbff;
        }
        .badge { font-size: 0.9rem; }
        .btn-outline-primary { font-size: 0.9rem; border-radius: 7px; }
        .btn-primary { margin-top: 1.8rem; border-radius: 10px; padding-inline: 1.6rem; }
        .inner-table {
            background: #fff;
            border-radius: 10px;
            overflow: hidden;
        }
        .inner-table th, .inner-table td {
            padding: 0.3rem 0.55rem;
            font-size: 0.88rem;
        }
        .inner-table thead {
            background-color: #f0f4fb;
        }
        .total-cell {
            font-weight: 700;
            color: #235fa4;
        }
    </style>
</head>
<body>
<div class="container history-wrap">
    <div class="mb-4 text-center">
        <h2 class="fw-bold page-title">Your Order History</h2>
        <p class="text-muted mb-0">Review your previous purchases and download receipts.</p>
    </div>

    <div class="order-card">
    <% if (orders && orders.length) { %>
        <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-header">
                <tr>
                    <th style="width: 22%;">Date</th>
                    <th style="width: 13%;">Payment</th>
                    <th style="width: 40%;">Items</th>
                    <th style="width: 10%;">Total</th>
                    <th style="width: 8%;">Status</th>
                    <th style="width: 7%;">Receipt</th>
                </tr>
            </thead>
            <tbody>
            <% orders.forEach(function(order) { %>
                <tr class="order-row">
                    <td><%= order.orderDate %></td>
                    <td><%= order.paymentMethod %></td>
                    <td>
                        <table class="table table-sm inner-table mb-0">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th class="text-center">Qty</th>
                                    <th class="text-end">Price</th>
                                    <th class="text-end">Item Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% order.items.forEach(function(item) { %>
                                    <tr>
                                        <td><%= item.productName %></td>
                                        <td class="text-center"><%= item.quantity %></td>
                                        <td class="text-end">
                                            $<%= Number(item.price).toFixed(2) %>
                                        </td>
                                        <td class="text-end">
                                            $<%= (Number(item.price) * item.quantity).toFixed(2) %>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </td>
                    <td class="total-cell">
                        $<%= Number(order.total).toFixed(2) %>
                    </td>
                    <td>
                        <% if (order.status === 'paid') { %>
                            <span class="badge bg-success px-3">Paid</span>
                        <% } else if (order.status === 'pending') { %>
                            <span class="badge bg-warning text-dark px-3">Pending</span>
                        <% } else { %>
                            <span class="badge bg-secondary px-3">Unknown</span>
                        <% } %>
                    </td>
                    <td>
                        <% if (order.status === 'paid' && order.receiptLink) { %>
                            <a href="<%= order.receiptLink %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                PDF
                            </a>
                        <% } else { %>
                            <span class="text-muted small">Awaiting</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center mb-0">No orders yet.</div>
    <% } %>

    <div class="text-end">
        <a href="/shopping" class="btn btn-primary">Back to Shopping</a>
    </div>
    </div>
</div>
</body>
</html>

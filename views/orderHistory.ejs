<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Order History</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <style>
        body { background: #f5f8fa; }
        .history-wrap {
            max-width: 980px;
            margin: 43px auto 30px auto;
        }
        .order-card {
            background: #fff;
            border-radius: 18px;
            box-shadow: 0 3px 16px rgba(80,120,180,0.09);
            padding: 2.3rem 2rem 2rem 2rem;
        }
        thead.table-dark th { background: #235fa4 !important; }
        .table th, .table td {vertical-align: middle;}
        .order-row { transition: box-shadow .2s; }
        .order-row:hover { box-shadow: 0 2px 12px rgba(18,50,110,0.08); background: #f4f8fc;}
        .badge { font-size: 0.99rem; }
        .btn-outline-primary { font-size: 0.98rem; border-radius: 7px;}
        .btn-primary { margin-top: 1.8rem;}
    </style>
</head>
<body>
<div class="container history-wrap">
    <div class="mb-4 text-center">
        <h2 class="fw-bold" style="letter-spacing:-1.5px;">Your Order History</h2>
    </div>

    <div class="order-card">
    <% if (orders && orders.length) { %>
        <div class="table-responsive">
        <table class="table table-bordered align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Date</th>
                    <th>Payment</th>
                    <th>Items</th>
                    <th>Total</th>
                    <th>Status</th>
                    <th>Receipt</th>
                </tr>
            </thead>
            <tbody>
            <% orders.forEach(function(order) { %>
                <tr class="order-row">
                    <td><%= order.orderDate %></td>
                    <td><%= order.paymentMethod %></td>
                    <td>
                        <% order.items.forEach(function(item) { %>
                            <div><%= item.productName %> x <%= item.quantity %></div>
                        <% }) %>
                    </td>
                    <td class="fw-bold">$<%= Number(order.total).toFixed(2) %></td>
                    <td>
                        <% if (order.status === 'paid') { %>
                            <span class="badge bg-success">Paid</span>
                        <% } else if (order.status === 'pending') { %>
                            <span class="badge bg-warning text-dark">Pending</span>
                        <% } else { %>
                            <span class="badge bg-secondary">Unknown</span>
                        <% } %>
                    </td>
                    <td>
                        <% if (order.status === 'paid' && order.receiptLink) { %>
                            <a href="<%= order.receiptLink %>" target="_blank" class="btn btn-sm btn-outline-primary">
                                View/Download PDF
                            </a>
                        <% } else { %>
                            <span class="text-muted">Awaiting Payment</span>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
            </tbody>
        </table>
        </div>
    <% } else { %>
        <div class="alert alert-info text-center">No orders yet.</div>
    <% } %>
    <div class="text-end">
        <a href="/shopping" class="btn btn-primary">Back to Shopping</a>
    </div>
    </div>
</div>
</body>
</html>

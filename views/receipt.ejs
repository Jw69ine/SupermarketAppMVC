<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Payment Receipt</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body { background: #f4f7fa; min-height: 100vh; }
        .centerer {
            min-height: 94vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .receipt-area {
            width: 100%;
            max-width: 720px;
            margin: 2.5rem auto 2rem auto !important;
            background: #fff;
            border-radius: 22px;
            box-shadow: 0 10px 40px rgba(35, 130, 200, .12), 0 1.7px 8px rgba(35,95,164,.07);
            padding: 2.4rem 2.3rem 2.2rem 2.3rem;
            animation: popIn 0.36s cubic-bezier(.42,1.16,.46,.95);
        }
        @keyframes popIn {
            from { opacity: 0; transform: scale(0.97) translateY(40px);}
            to   { opacity: 1; transform: none;}
        }
        .navbar { margin-bottom: 1.6rem; }
        .card { border-radius: 14px; }
        .btn-lg, .btn { border-radius: 8px;}
        .btn-success { font-size: 1.13rem;border-width: 2px;}
        .text-success { font-weight: 700;}
        .border-top { border-top: 2px solid #dee2e6 !important;}
    </style>
</head>
<body>
<!-- Navbar directly included in receipt -->
<nav class="navbar navbar-expand-sm bg-dark navbar-dark mb-4">
  <div class="container-fluid">
    <a class="navbar-brand" href="/">Supermarket App</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavbar">
      <ul class="navbar-nav ms-auto">
        <li class="nav-item">
          <a class="nav-link" href="/shopping">Shop</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/cart">View Cart</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/orders">Order History</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/logout">Logout</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<div class="centerer">
<main class="receipt-area">

    <div class="text-center mb-4">
        <h2 class="text-success">âœ“ Payment Successful!</h2>
        <p class="text-muted mb-1">Thank you for your order, <%= user.username %>!</p>
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Receipt #<%= orderId %></h5>
        </div>
        <div class="card-body px-1">
            <table class="table table-borderless mb-0 align-middle">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Qty</th>
                        <th>Unit Price</th>
                        <th class="text-end">Line Total</th>
                    </tr>
                </thead>
                <tbody>
                    <% cart.forEach(item => { %>
                    <tr>
                        <td><%= item.productName %></td>
                        <td><%= item.quantity %></td>
                        <td>$<%= Number(item.price).toFixed(2) %></td>
                        <td class="text-end">$<%= (item.price * item.quantity).toFixed(2) %></td>
                    </tr>
                    <% }) %>
                </tbody>
                <tfoot>
                    <tr class="border-top align-middle">
                        <td colspan="3" class="text-end fw-bold fs-5">Total Paid:</td>
                        <td class="text-end fw-bold fs-5">$<%= Number(total).toFixed(2) %></td>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="card mb-4 fade-in">
        <div class="card-body">
            <h5>Email Your Receipt</h5>
            <form action="/email-receipt/<%= orderId %>" method="POST" class="row g-3 mb-0">
                <div class="col-12 col-md-7">
                    <input type="email" name="email" class="form-control" placeholder="Enter your email" required>
                </div>
                <div class="col-12 col-md-5">
                    <button type="submit" class="btn btn-primary mb-3 w-100">Send PDF to Email</button>
                </div>
            </form>
            <% if (typeof emailSent !== "undefined" && emailSent) { %>
                <div class="alert alert-success mt-2 mb-0">Receipt was emailed to <%= emailSent %>!</div>
            <% } %>
            <% if (typeof emailError !== "undefined" && emailError) { %>
                <div class="alert alert-danger mt-2 mb-0">Failed to send: <%= emailError %></div>
            <% } %>
        </div>
    </div>

    <div class="text-center mt-2 mb-1 pb-1">
        <a href="<%= receiptDownloadPath %>" class="btn btn-success btn-lg mb-2" download>
            ðŸ“„ Download PDF Receipt
        </a>
        <a href="/orders" class="btn btn-outline-primary mb-2 ms-2">View Order History</a>
        <a href="/shopping" class="btn btn-secondary mb-2 ms-2">Continue Shopping</a>
    </div>
</main>
</div>
</body>
</html>

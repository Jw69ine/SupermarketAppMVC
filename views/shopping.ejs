<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body { background: #f6f8fa; }
    .product-table td, .product-table th { vertical-align: middle !important; }
    .product-img {
      max-width: 70px;
      max-height: 70px;
      border-radius: 10px;
      box-shadow: 0 1px 8px rgba(35,95,164, 0.1);
      background: #fff;
      padding: 4px;
    }
    .buy-select { min-width: 55px; border-radius: 7px; }
    .buy-btn { border-radius: 8px; font-size: 1rem; min-width: 85px; }
    .navbar { margin-bottom: 1.5rem; }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item">
              <a class="nav-link" href="/admin/dashboard">Dashboard</a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a class="nav-link" href="/orders">Order History</a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <p class="text-secondary mt-1 mb-3">Welcome, <%= user.username %> (<%= user.role %>)</p>
    <div class="text-center mb-4"><h2 class="fw-bold">Products from Supermarket</h2></div>

    <div class="table-responsive">
      <table class="table table-hover product-table align-middle text-center shadow-sm bg-white rounded">
        <thead class="table-light">
          <tr>
            <th>Product Name</th>
            <th>Product Image</th>
            <th>Quantity<br>(Stock)</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Buy</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < products.length; i++) { %>
            <tr>
              <td>
                <a href="/product/<%= products[i].id %>" class="text-primary text-decoration-none">
                  <%= products[i].productName %>
                </a>
              </td>
              <td>
                <img src="images/<%= products[i].image %>" class="product-img" alt="image">
              </td>
              <td><%= products[i].quantity %></td>
              <td class="fw-semibold">$<%= products[i].price.toFixed(2) %></td>
              <td>
                <select class="form-select buy-select mx-auto"
                        onchange="document.getElementById('quantity-<%= products[i].id %>').value = this.value;">
                  <% for (let q = 1; q <= 5; q++) { %>
                    <option value="<%= q %>"><%= q %></option>
                  <% } %>
                </select>
              </td>
              <td>
                <form action="/add-to-cart/<%= products[i].id %>" method="POST" style="display:inline;">
                  <input type="hidden" name="quantity" id="quantity-<%= products[i].id %>" value="1">
                  <button type="submit" class="btn btn-primary buy-btn">Buy</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Supermarket App</title>
  <style>
    body { background: #f4f6fb; }
    .navbar { margin-bottom: 1.5rem; }

    .page-header {
      text-align: center;
      margin-bottom: 1.5rem;
    }
    .page-header h2 {
      font-weight: 700;
      letter-spacing: -0.5px;
    }
    .page-header p {
      color: #6c757d;
      margin-bottom: 0;
    }

    .product-card {
      border-radius: 18px;
      box-shadow: 0 6px 18px rgba(35, 95, 164, 0.10);
      border: none;
      overflow: hidden;
      transition: transform 0.18s ease, box-shadow 0.18s ease;
    }
    .product-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 10px 26px rgba(35, 95, 164, 0.17);
    }
    .product-img-wrapper {
      height: 130px;
      display: flex;
      align-items: center;
      justify-content: center;
      background: linear-gradient(135deg, #fdfbff, #f0f5ff);
    }
    .product-img-wrapper img {
      max-height: 90px;
      max-width: 90px;
      border-radius: 14px;
      background: #fff;
      padding: 6px;
      box-shadow: 0 3px 10px rgba(0,0,0,0.08);
    }
    .product-name {
      font-weight: 600;
      font-size: 1.05rem;
    }
    .price-text {
      font-size: 1.1rem;
      font-weight: 700;
      color: #235fa4;
    }
    .stock-badge {
      font-size: 0.85rem;
    }
    .qty-input {
      max-width: 80px;
      text-align: center;
      border-radius: 8px;
    }
    .buy-btn {
      border-radius: 10px;
      font-weight: 600;
      letter-spacing: 0.02em;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user }) %>

  <% const msgList = (typeof messages !== 'undefined' && messages) ? messages : []; %>

  <div class="container pb-4">
    <!-- Flash messages -->
    <% if (msgList.length > 0) { %>
      <div class="alert alert-info mt-2">
        <% msgList.forEach(function(msg) { %>
          <div><%= msg %></div>
        <% }) %>
      </div>
    <% } %>

    <p class="text-secondary mt-1 mb-1">Welcome, <%= user.username %> (<%= user.role %>)</p>

    <div class="page-header">
      <h2>Products from Supermarket</h2>
      <p>Pick what you need and add straight to your cart.</p>
    </div>

    <div class="row g-4">
      <% for (let i = 0; i < products.length; i++) { 
            const p = products[i];
            const maxQty = Math.min(p.quantity, 999);
      %>
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
          <div class="card product-card h-100">
            <div class="product-img-wrapper">
              <img src="images/<%= p.image %>" alt="image of <%= p.productName %>">
            </div>
            <div class="card-body d-flex flex-column">
              <h5 class="product-name mb-1">
                <a href="/product/<%= p.id %>" class="text-decoration-none text-dark">
                  <%= p.productName %>
                </a>
              </h5>
              <p class="mb-1 price-text">$<%= p.price.toFixed(2) %></p>

              <% if (p.quantity > 0) { %>
                <span class="badge bg-light text-dark border stock-badge mb-2">
                  In stock: <strong><%= p.quantity %></strong>
                </span>

                <form action="/add-to-cart/<%= p.id %>" method="POST" class="mt-auto">
                  <div class="d-flex align-items-center justify-content-between mb-2">
                    <label for="quantity-<%= p.id %>" class="mb-0 me-2 small text-muted">Quantity</label>
                    <input type="number"
                            name="quantity"
                            class="form-control qty-input"
                            id="quantity-<%= p.id %>"
                            value="1"
                            min="1"
                            max="<%= maxQty %>">
                  </div>
                  <button type="submit" class="btn btn-primary w-100 buy-btn">Add to Cart</button>
                </form>
              <% } else { %>
                <span class="badge bg-danger mt-3 align-self-start">Out of stock</span>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>

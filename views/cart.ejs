<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background: #f7fbfc; }
    .cart-card {
      background: #fff;
      border-radius: 18px;
      box-shadow: 0 3px 14px rgba(60,60,120,0.09);
      padding: 2.2rem 2rem 2rem;
      margin-top: 2.5rem;
    }
    .cart-table th, .cart-table td {
      vertical-align: middle !important;
      font-size: 1.06rem;
    }
    .img-thumbnail {
      border-radius: 14px;
      padding: 3px;
      background: #f4f8fb;
      box-shadow: 0 1px 5px rgba(60,60,120,0.08);
      max-width: 70px;
      max-height: 70px;
    }
    .btn-danger { font-weight: 500; }
    .cart-total-row {
      font-size: 1.25rem;
      font-weight: 700;
      color: #235fa4;
    }
    .cart-actions a {
      min-width: 210px;
      font-weight: 500;
      font-size: 1.08rem;
      border-radius: 8px;
      padding: 0.65rem 0;
      box-shadow: 0 2px 8px rgba(60,60,120,0.06);
    }
    .cart-actions .btn-primary { margin-right: 1rem; }
    @media (max-width: 700px) {
      .cart-card { padding: 1rem 0.5rem; }
      .cart-actions a { min-width: 120px; font-size: 0.95rem; }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark shadow-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Supermarket App</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/shopping">Shop</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
  <!-- Cart Content -->
  <div class="container">
    <div class="cart-card">
      <h2 class="mb-4 fw-bold" style="letter-spacing:-1px;">Shopping Cart</h2>
      <% if (cart.length === 0) { %>
        <p>Your cart is empty.</p>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-bordered align-middle cart-table mb-0">
            <thead class="table-light">
              <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Quantity</th>
                <th>Total</th>
                <th class="text-center">Remove</th>
              </tr>
            </thead>
            <tbody>
              <% let total = 0; %>
              <% for (let i = 0; i < cart.length; i++) { %>
                <tr>
                  <td><%= cart[i].productName %></td>
                  <td>
                    <img src="/images/<%= cart[i].image %>" class="img-thumbnail" alt="Product image">
                  </td>
                  <td><%= cart[i].quantity %></td>
                  <td class="fw-semibold">$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                  <td class="text-center">
                    <form action="/cart/remove/<%= cart[i].productId %>" method="POST" style="display:inline;">
                      <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                    </form>
                  </td>
                </tr>
                <% total += cart[i].price * cart[i].quantity; %>
              <% }; %>
            </tbody>
          </table>
        </div>
        <div class="d-flex justify-content-between align-items-center my-4">
          <div>
            <h4 class="cart-total-row mb-0">Total: $<%= total.toFixed(2) %></h4>
          </div>
          <div class="cart-actions">
            <a href="/checkout" class="btn btn-primary">Proceed to Checkout</a>
            <a href="/shopping" class="btn btn-outline-secondary">Back to Shopping</a>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>

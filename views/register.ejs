<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Supermarket App - Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <style>
    body { background: #f4f7fa; }
    .register-container {
      max-width: 480px;
      margin-top: 60px;
      margin-bottom: 60px;
    }
    .card {
      border-radius: 18px;
      box-shadow: 0 2px 12px rgba(60,60,120,0.08);
      padding: 2rem 2rem 1.7rem 2rem;
    }
    .form-label { font-weight: 500; }
    .form-control {
      border-radius: 8px;
      min-height: 48px;
      font-size: 1.07rem;
      margin-bottom: 1.2rem;
    }
    .btn-primary {
      border-radius: 7px;
      font-size: 1.1rem;
      padding: 0.7rem 0;
      font-weight: bold;
      letter-spacing: .025em;
    }
    h1 { font-weight: bold; letter-spacing: -1px; }
  </style>
</head>
<body>
  <%- include('partials/navbar', { user: user }) %>
  <div class="container register-container">
    <div class="card">
      <h1 class="mb-4 text-center">Register</h1>
      <% if (messages && messages.length > 0) { %>
        <div class="alert alert-danger mb-3" role="alert">
          <% messages.forEach(function(message) { %>
            <div><%= message %></div>
          <% }); %>
        </div>
      <% } %>
      <form action="/register" method="POST" autocomplete="on">
        <div>
          <label for="username" class="form-label">Username:</label>
          <input type="text" id="username" name="username" class="form-control" required
                autocomplete="username"
                <% if (formData && formData.username) { %> value="<%= formData.username %>" <% } else { %> value="" <% } %>>
        </div>
        <div>
          <label for="email" class="form-label">Email:</label>
          <input type="email" id="email" name="email" class="form-control" required
                autocomplete="email"
                <% if (formData && formData.email) { %> value="<%= formData.email %>" <% } else { %> value="" <% } %>>
        </div>
        <div>
          <label for="password" class="form-label">Password:</label>
          <input type="password" id="password" name="password" class="form-control" required
                autocomplete="new-password">
        </div>
        <div>
          <label for="address" class="form-label">Address:</label>
          <input type="text" id="address" name="address" class="form-control" required
                autocomplete="street-address"
                <% if (formData && formData.address) { %> value="<%= formData.address %>" <% } else { %> value="" <% } %>>
        </div>
        <div>
          <label for="contact" class="form-label">Contact Number:</label>
          <input type="tel" id="contact" name="contact" class="form-control" required
                autocomplete="tel"
                <% if (formData && formData.contact) { %> value="<%= formData.contact %>" <% } else { %> value="" <% } %>>
        </div>
        
        <!-- No role selection here -->
        <button type="submit" class="btn btn-primary w-100 mt-2">Register</button>
      </form>
    </div>
  </div>
</body>
</html>

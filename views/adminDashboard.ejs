<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Admin Dashboard - Supermarket App</title>
    <style>
        body { background: #f4f8fa; }
        .dashboard-section { border-radius: 14px; box-shadow: 0 3px 14px rgba(35, 95, 164, 0.08); background: #fff; padding: 2rem 2rem 1.4rem 2rem; margin-bottom: 2.5rem; }
        .admin-card-table thead { background: #e8f0fe; }
        .admin-card-table td, .admin-card-table th { vertical-align: middle !important; }
        .table-hover tbody tr:hover { background: #f2f7fc; }
        .h2, h2 { font-weight: 700; }
        .navbar { margin-bottom: 1.5rem; }
    </style>
</head>
<body>
<%- include('partials/navbar', { user: user }) %>

    <div class="container mt-4">
        <h2 class="mb-4">Admin Dashboard</h2>
        <div class="mb-3 fs-5">Welcome, <span class="fw-bold text-primary"><%= user.username %></span>!</div>
        
        <!-- Product Inventory Section -->
        <div class="dashboard-section mb-5">
            <h4 class="mb-3">Product Inventory</h4>
            <% if (products && products.length) { %>
                <div class="table-responsive">
                    <table class="table table-hover admin-card-table align-middle">
                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Quantity</th>
                                <th>Price</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% products.forEach(function(p){ %>
                            <tr>
                                <td><%= p.productName %></td>
                                <td><%= p.quantity %></td>
                                <td class="fw-semibold">$<%= Number(p.price).toFixed(2) %></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">No products found.</div>
            <% } %>
        </div>
        
        <!-- All Orders Section -->
        <div class="dashboard-section">
            <h4 class="mb-3">All Orders</h4>
            <% if (orders && orders.length) { %>
                <div class="table-responsive">
                    <table class="table table-hover admin-card-table align-middle">
                        <thead>
                            <tr>
                                <th>Order ID</th>
                                <th>User</th>
                                <th>Total</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody>
                        <% orders.forEach(function(o){ %>
                            <tr>
                                <td><%= o.id %></td>
                                <td>
                                    <a href="/users/<%= o.userId %>" class="text-decoration-none text-primary">
                                        <%= o.username %>
                                    </a>
                                </td>
                                <td class="fw-semibold">$<%= Number(o.total).toFixed(2) %></td>
                                <td class="text-secondary"><%= o.orderDate %></td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <div class="alert alert-info">No orders found.</div>
            <% } %>
        </div>
    </div>
</body>
</html>

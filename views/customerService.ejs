    <!DOCTYPE html>
    <html>
    <head>
    <meta charset="UTF-8">
    <title>Customer Service</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"/>
    <%- include('partials/navbar', { user: user }) %>
    </head>
    <body class="bg-light">
    <div class="container my-5">
    <h2 class="mb-3">Customer Service</h2>
    <p class="text-muted">Submit a refund request for a paid order. Admin will review and approve manually.</p>

    <% if (errors && errors.length) { %>
        <div class="alert alert-danger"><%= errors[0] %></div>
    <% } %>
    <% if (messages && messages.length) { %>
        <div class="alert alert-success"><%= messages[0] %></div>
    <% } %>

    <div class="card p-4 mb-4">
        <h5 class="mb-3">Request a refund</h5>
        <form method="POST" action="/refund/request">
        <div class="mb-3">
            <label class="form-label">Select order</label>
            <select name="order_id" class="form-select" required>
            <option value="">-- choose --</option>
            <% (orders || []).forEach(o => { %>
                <option value="<%= o.id %>">Order #<%= o.id %> | <%= o.orderDate %> | $<%= Number(o.total).toFixed(2) %> | <%= o.paymentMethod %> | <%= o.status %></option>
            <% }) %>
            </select>
            <div class="form-text">Only paid orders should be refunded.</div>
        </div>

        <div class="mb-3">
            <label class="form-label">Reason</label>
            <input name="reason" class="form-control" maxlength="255" placeholder="e.g. wrong item, damaged, changed mind" required/>
        </div>

        <button class="btn btn-primary">Submit refund request</button>
        </form>
    </div>

    <div class="card p-4">
        <h5 class="mb-3">Your refund requests</h5>
        <% if (requests && requests.length) { %>
        <div class="table-responsive">
            <table class="table table-sm align-middle">
            <thead>
                <tr>
                <th>ID</th>
                <th>Order</th>
                <th>Reason</th>
                <th>Status</th>
                <th>Admin note</th>
                <th>Created</th>
                </tr>
            </thead>
            <tbody>
                <% requests.forEach(r => { %>
                <tr>
                    <td><%= r.id %></td>
                    <td>#<%= r.order_id %></td>
                    <td><%= r.reason %></td>
                    <td><span class="badge bg-secondary"><%= r.status %></span></td>
                    <td class="text-muted"><%= r.admin_note || '' %></td>
                    <td class="text-muted"><%= r.created_at %></td>
                </tr>
                <% }) %>
            </tbody>
            </table>
        </div>
        <% } else { %>
        <div class="text-muted">No refund requests yet.</div>
        <% } %>
    </div>
    </div>
    </body>
    </html>
